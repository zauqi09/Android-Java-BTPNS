<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="559dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:visibility="visible"
        app:srcCompat="@drawable/jenius"
        tools:srcCompat="@drawable/jenius"
        android:contentDescription="@string/jenius" />

    <Button
        android:id="@+id/button3"
        android:layout_width="371dp"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="608dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="-88dp"
        android:background="@drawable/button"
        android:shadowColor="#FFFFFF"
        android:text="@string/register"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button3"
        android:layout_marginTop="35dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="8dp"
            android:text="@string/saya_sudah_punya_akun"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView"
            android:layout_marginStart="80dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="80dp"
            android:paddingLeft="78dp"
            android:paddingTop="30dp"
            android:paddingRight="58dp"
            android:text="@string/version_2_28_1_7447"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="12sp"
            android:visibility="visible"
            tools:ignore="NotSibling" />
    </RelativeLayout>


</RelativeLayout>